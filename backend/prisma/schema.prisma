generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"

  //added to change the module resolution approach
  transpile = "cjs"
}

datasource db {
  provider = "sqlite"
}

model TimeEntry {
  id          Int      @id @default(autoincrement())
  date        DateTime
  project     String
  hours       Float
  description String
  createdAt   DateTime @default(now())
}

